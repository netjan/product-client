{% extends 'base.html.twig' %}

{% block title %}Dom index{% endblock %}

{% block body %}
    <h1>Dom index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Qty</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dom in doms %}
            <tr>
                <td>{{ dom.id }}</td>
                <td>{{ dom.name }}</td>
                <td>{{ dom.qty }}</td>
                <td>
                    <a href="{{ path('app_dom_show', {'id': dom.id}) }}">show</a>
                    <a href="{{ path('app_dom_edit', {'id': dom.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dom_new') }}">Create new</a>
{% endblock %}
